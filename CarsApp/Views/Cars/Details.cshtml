@model CarsApp.Models.Car

@{
    ViewData["Title"] = "Details";
    var photoPath = "~/CarImages/" + (Model.CarPicture ?? "blankImage.png");
}

<h1>Details</h1>

<div>
    <h4>@Html.DisplayFor(model => model.Manufacturer.Name) @Html.DisplayFor(model => model.Name)</h4>
    <hr />
    <img src="@photoPath"
         asp-append-version="true" />

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ModelYear)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ModelYear)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Manufacturer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Manufacturer.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reviews)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Driver</th>
                    <th>Engine Type</th>
                    <th>Engine Size</th>
                </tr>
                @foreach (var item in Model.Reviews)
                {
                    <tr>
                        <td>
                            <a asp-controller="Drivers" asp-action="Details" asp-route-id="@item.Driver.Id">@Html.DisplayFor(modelItem => item.Driver.FullName)</a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EngineType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EngineSize)
                        </td>
                        <td>
                            <a asp-controller="Reviews" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-controller="Reviews" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-controller="Reviews" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </table>
        </dd>


    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

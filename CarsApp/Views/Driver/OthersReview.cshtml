@model CarsApp.Models.Review

@{
    ViewData["Title"] = "Others Review Details";
    var photoPath = "~/DriverImages/" + (Model.Driver.DriverPicture ?? "blankImage.png");
}

    <img src="@photoPath"
         height="120" width="120"
         asp-append-version="true"
         style="float:left; margin-right:10px;" />
<h1>Review for @Html.DisplayFor(model => model.Car.Manufacturer.Name) @Html.DisplayFor(model => model.Car.Name)</h1>
<h1>by @Html.DisplayFor(model => model.Driver.FullName)</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.ModelYear) @Html.DisplayFor(model => model.Car.Manufacturer.Name) @Html.DisplayFor(model => model.Car.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Driver)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Driver.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EngineType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EngineType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EngineSize)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EngineSize)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FuelConsumption)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FuelConsumption)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="ReviewList">All Reviews</a>
</div>
